doctype html

head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet", href="/style/bootstrap.min.css")
        link(rel="stylesheet", href="/style/main.css")
        link(rel="icon", type="image/png", size="16x16", href="/image/favicon-16x16.png")
        link(rel="manifest", href="/manifest.json")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        meta(name="apple-mobile-web-app-title", content="SEK => USD")
        meta(name="msapplication-TileColor", content="#2F3BA2")
        title Svenska Kronor till USD

body
        nav(class=["navbar", "navbar-expand-md", "navbar-dark", "bg-dark", "fixed-top"])
                a(class=["navbar-brand"], href="/") SEK => USD
                button(class=["navbar-toggler"], type="button", data-toggle="collapse", data-target="#navbarCollapse", aria-controls="navbarCollapse", aria-label="Toggle navigation")
                        span(class=["navbar-toggler-icon"])
                div(class=["collapse", "navbar-collapse"], id="navbarCollapse")
                        ul(class=["navbar-nav", "mr-auto"])
                                li(class=["nav-item", "current"])
                                        a(class="nav-link", href="/") Home #[span(class=["sr-only"]) (current) ]
        div(class=["container"])
                form(onsubmit="return false", oninput="formInput()")
                        div(class="form-group row")
                                input(class=["col-sm-11", "form-control", "form-control-lg"], type="number", id="sek")
                                label(class=["col-sm-1"], for="sek") #[h1 :- ]
                        div(class="form-group row")
                                label(class=["col-sm-1", "text-right"], for="usd") #[h1 $ ]
                                output(class=["col-sm-11", "form-control", "form-control-lg"], type="number", id="usd", for="sek")
                label(for="dateUpdated", class="text-center") Exchange rates updated on
                h3(id="dateUpdated", class="text-center") (null)
        script(
        src="/script/jquery-3.2.1.min.js",
        integrity="sha384-xBuQ/xzmlsLoJpyjoggmTEz8OWUFM0/RC5BsqQBDX2v5cMvDHcMakNTNrHIW2I5f"
        )
        script(
        src="/script/popper.min.js",
        integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
        )
        script(
        src="/script/bootstrap.min.js",
        integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1"
        )
        script(
        src="/script/money.min.js",
        integrity="sha384-azvC0tD7cp7HVImGHaFV/ywqWprXpbVAv3Cc/73d/02UfZWR8vNM+kATzaWUIUMQ"
        )
        script(src="/script/main.js")
